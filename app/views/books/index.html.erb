<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td>Edit</td>
        <td>Destroy</td>
      </tr>
    <% end %>
  </tbody>
</table>



<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>

  <label>Body</label>
  <%= f.text_area :body %>

  <%= f.submit "Create Book" %>
<% end %>