<!--更新フォーム-->
<h1>Editing Book</h1>

<%= form_with model:@book, local:true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  
  <div class="text-form">
    <label>Title</label><br>
    <%= f.text_field :title, class: "title-box"%>
  </div>
  
  <div class="text-form">
    <label>Body</label><br>
    <%= f.text_area :body, class: "body-box" %>
  </div>

  <div class="text-form">
    <%= f.submit "Update Book", class: "button-box" %>
  </div>

<% end %>


<!--リンク-->
<%= link_to "Show", book_path(@book.id) %>
