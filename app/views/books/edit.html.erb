<body>
  <h1>Editing Book</h1>

  <%= form_with model:@book, local:true do |f| %>

    <%= render 'layouts/error_messages', model: f.object %>

    <label>Title</label>
    <%= f.text_field :title %>
    <label>Body</label>
    <%= f.text_area :body %>
    <%= f.submit "Update Book" %>
  <% end %>

  <p>
    <%= link_to "Show", book_path(@book.id) %>
     |
    <%= link_to "Back", books_path %>
  </p>
</body>